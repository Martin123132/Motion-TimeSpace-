# APPENDIX B — FULL WORKING PYTHON CODE (REPRODUCIBLE)

```python
import numpy as np
import pandas as pd
import matplotlib.pyplot as plt
from scipy.optimize import curve_fit
from scipy.integrate import trapezoid
import requests, io

# ------------------------------------------------------------
# LOAD PANTHEON+ DATA (OFFICIAL LINK)
# ------------------------------------------------------------
url = "https://raw.githubusercontent.com/PantheonPlusSH0ES/DataRelease/main/Pantheon+_Data/4_DISTANCES_AND_COVAR/Pantheon+SH0ES.dat"
resp = requests.get(url)
df = pd.read_csv(io.StringIO(resp.text), sep=r"\s+", comment="#")

z = df['zCMB'].values
mu = df['MU_SH0ES'].values
mu_err = df['MU_SH0ES_ERR_DIAG'].values

mask = (z > 0) & (mu_err > 0)
z, mu, mu_err = z[mask], mu[mask], mu_err[mask]

c = 299792.458

# ------------------------------------------------------------
# MTS DISTANCE EQUATIONS
# ------------------------------------------------------------
def mts_distance(z, alpha, beta, H0, transition):
    denom = 1 + alpha*np.log(1+z) + beta*z
    return (c/H0) * (z * (1 + transition*z)) / denom

def mts_luminosity_distance(z, alpha, beta, H0, transition, highz, quad):
    base = mts_distance(z, alpha, beta, H0, transition)
    correction = 1 + highz*np.tanh(z/transition) + quad*z**2
    return base * correction

def mu_MTS(z, alpha, beta, H0, transition, highz, quad):
    dL = mts_luminosity_distance(z, alpha, beta, H0, transition, highz, quad)
    return 5*np.log10(dL) + 25

# ------------------------------------------------------------
# FIT MTS PARAMETERS
# ------------------------------------------------------------
p0 = [0.05, 0.01, 72.0, 0.1, 0.2, 0.0]
bounds = ([0.01, 0.0001, 60, 0.01, 0.01, -0.1],
          [0.5,  0.1,    80, 0.6,  0.6,   0.1])

popt, pcov = curve_fit(mu_MTS, z, mu, sigma=mu_err,
                       p0=p0, bounds=bounds, absolute_sigma=True)

alpha, beta, H0, transition, highz, quad = popt
print("Recovered MTS parameters:", popt)

# ------------------------------------------------------------
# BAO PREDICTION
# ------------------------------------------------------------
def numerical_H(z, alpha, beta, H0, transition):
    dz = 1e-4
    D1 = mts_distance(z - dz, alpha, beta, H0, transition)
    D2 = mts_distance(z + dz, alpha, beta, H0, transition)
    return c / ((D2 - D1)/(2*dz))

bao_z = np.array([0.38, 0.51, 0.61])

DM = mts_distance(bao_z, alpha, beta, H0, transition)
H = numerical_H(bao_z, alpha, beta, H0, transition)
DA = DM/(1+bao_z)
DV = ((1+bao_z)**2 * DA**2 * (c*bao_z/H))**(1/3)

print("\nBAO Predictions:")
print("D_M =", DM)
print("H(z) =", H)
print("D_V =", DV)

# ------------------------------------------------------------
# CMB ACOUSTIC PEAK
# ------------------------------------------------------------
z_ls = 1090
DA_ls = mts_distance(z_ls, alpha, beta, H0, transition)/(1+z_ls)

r_s = 147.0  # effective scale
ell1 = np.pi * DA_ls / r_s

print("\nCMB Acoustic Peak Prediction:")
print("D_A =", DA_ls)
print("ℓ1 =", ell1)
```

